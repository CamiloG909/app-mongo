<h1 class="all-notes__title">All notes</h1>
<section class="all-notes">
	{{#each notes}}
		<article class="card-note">
			<a class="card-note__edit" href="/notes/edit/{{_id}}"><i class="bi bi-pen-fill"></i></a>
			<p class="card-note__title">{{title}}</p>
			<p class="card-note__description">{{description}}</p>
			<form action="/notes/delete/{{_id}}?_m=DELETE" method="POST">
				<input type="hidden" name="_me" value="DELETE">
				<button class="card-note__btn"><i class="bi bi-trash-fill"></i></button>
			</form>
		</article>
	{{/each}}
</section>
