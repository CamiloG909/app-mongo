<div class="form-add-note">
	<h1 class="form-add-note__title">New note</h1>
	<form action="/notes/new" method="POST">
		<input class="form-add-note__input" type="text" name="title" id="" placeholder="Title" required/>
		<textarea class="form-add-note__textarea" name="description" id="" placeholder="Description" required></textarea>
		<button class="form-add-note__btn">Save<i class="bi bi-plus-lg form-add-note__btn-icon"></i></button>
	</form>
</div>
